@model IEnumerable<VSA_GameHub.Models.Game>


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="text-align:center; background-image:url('/images/div-image.jpg')">
    <p style="font-size:30px; font-family:Verdana;font-weight:bold; color:whitesmoke">VSA🎮GameHub</p>

</div>
